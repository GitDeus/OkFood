@model OkFood.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "col s8", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <div class="row">
            <div class="input-field col s9">
                <i class="material-icons prefix">email</i>
                @Html.TextBoxFor(m => m.UserName, new { @class = "validate", @id = "icon_prefix", @type = "email" })
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="input-field col s9">
                <i class="material-icons prefix">lock_open</i>
                @Html.TextBoxFor(m => m.Password, new { @class = "", @id = "password", @type= "password" })
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="input-field col s9">
                <i class="material-icons prefix">lock_outline</i>
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "", @id = "password", @type = "password" })
                @Html.LabelFor(m=>m.ConfirmPassword)
            </div>

            <div class="input-field col s9">
               @Html.ValidationSummary()
               
            </div>
            <div class="input-field col s9">
                    <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

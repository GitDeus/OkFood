@model OkFood.Domain.Model.Entities.Order

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<h4>Order</h4>
<div class="row">
    @using (Html.BeginForm())
    {
        <div class="col s12">
            @Html.AntiForgeryToken()

            <div class="row">
                

                @Html.ValidationSummary(true, "", new { @class = "validate" })
                <div class="input-field col s12">
                    @Html.LabelFor(model => model.Title)
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "validate" })
                </div>

                <div class="input-field col s12">
                    @Html.DropDownListFor(model => model.DeliveryAddressId, ViewBag.DeliveryList as SelectList)
                    @Html.ValidationMessageFor(model => model.DeliveryAddressId, "", new { @class = "validate" })
                </div>

                <div class="input-field col s12">
                    <input type="submit" value="Create" class="btn waves-effect waves-light" />
                    <a href="@Url.Action("Index", "Order")" value="Back to List" class="btn red waves-effect waves-light">Back to List</a>
                </div>
            </div>
        </div>
    }
</div>
